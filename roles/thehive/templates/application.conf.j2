# {{ ansible_managed }}
# Created on: {{ ansible_date_time.date }} {{ ansible_date_time.time }}

# Secret Key
play.http.secret.key = "{{ thehive_secret_key }}"

# Secure Cookies
play.http.session.secure = true

# Listen port
http.port = {{ thehive_port }}

# ElasticSearch
search {
  # Name of the index
  index = {{ elasticsearch_index_name }}
  # Address of the ElasticSearch instance
  uri = "{{ elasticsearch_uris | join(" ") }}"
  # Scroll keepalive
  keepalive = 1m
  # Size of the page for scroll
  pagesize = 50
  # Number of shards
  nbshards = 5
  # Number of replicas
  nbreplicas = 1
  # Arbitrary settings
  settings {
    # Maximum number of nested fields
    mapping.nested_fields.limit = 100
  }
}

auth.provider = ["local"]
auth.method.basic = false

# Maximum time between two requests without requesting authentication
session {
  warning = 5m
  inactivity = 1h
}

# Max textual content length
play.http.parser.maxMemoryBuffer= 1M
# Max file size
play.http.parser.maxDiskBuffer = 1G

# Cortex
play.modules.enabled += connectors.cortex.CortexConnector
cortex {
{% for cortex in thehive_cortex_instances %}
  "{{ cortex.name }}" {
    url = "{{ cortex.url }}"
    key = "{{ cortex.key }}"
  }
{% endfor %}
}

# WebHooks
webhooks {
{% for webhook in thehive_webhooks %}
  "{{ webhook.name }}" {
    url = "{{ webhook.url }}"
  }
{% endfor %}
}
